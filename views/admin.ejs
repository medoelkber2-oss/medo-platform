<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة التحكم الشاملة - مستر ميدو</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { font-family: 'Cairo', sans-serif; background: #0f172a; color: white; }
        .sidebar { width: 260px; background: #1e293b; position: fixed; height: 100vh; padding: 20px; border-left: 1px solid rgba(255,255,255,0.1); }
        .main-content { margin-right: 260px; padding: 40px; }
        .card-custom { background: rgba(255,255,255,0.05); border-radius: 20px; padding: 25px; margin-bottom: 30px; border: 1px solid rgba(255,255,255,0.1); }
        .active-badge { background: #6366f1; color: white; padding: 2px 10px; border-radius: 50px; font-size: 0.8rem; }
        code { color: #facc15; font-size: 1rem; }
        .table { --bs-table-bg: transparent; color: white; }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2 class="text-primary fw-black text-center mb-5">مستر ميدو</h2>
        <nav class="nav flex-column gap-3">
            <a href="#courses-section" class="text-white text-decoration-none"><i class="fas fa-play-circle me-2"></i> الكورسات</a>
            <a href="#students-section" class="text-white text-decoration-none"><i class="fas fa-users-cog me-2"></i> بيانات الطلاب</a>
            <a href="#codes-section" class="text-white text-decoration-none"><i class="fas fa-key me-2"></i> الأكواد</a>
            <hr class="opacity-25">
            <a href="/logout" class="btn btn-outline-danger w-100">خروج</a>
        </nav>
    </div>

    <div class="main-content">
        <div class="card-custom" id="courses-section">
            <h3 class="text-primary mb-4">إضافة كورس جديد</h3>
            <form action="/admin/add-course" method="POST" class="row g-3 mb-4">
                <div class="col-md-4"><input type="text" name="title" class="form-control" placeholder="اسم الكورس" required></div>
                <div class="col-md-4"><input type="text" name="vid" class="form-control" placeholder="YouTube ID" required></div>
                <div class="col-md-4"><input type="text" name="thumb" class="form-control" placeholder="رابط الغلاف"></div>
                <div class="col-12"><button type="submit" class="btn btn-primary w-100">نشر الكورس</button></div>
            </form>
            <table class="table table-dark">
                <thead><tr><th>الغلاف</th><th>العنوان</th><th>حذف</th></tr></thead>
                <tbody>
                    <% courses.forEach(c => { %>
                    <tr>
                        <td><img src="<%= c.thumb %>" width="50" class="rounded"></td>
                        <td><%= c.title %></td>
                        <td><a href="/admin/delete-course/<%= c._id %>" class="btn btn-sm btn-danger">حذف</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="card-custom" id="students-section">
            <h3 class="text-info mb-4">قائمة الطلاب (البيانات السرية)</h3>
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle">
                    <thead>
                        <tr>
                            <th>الاسم</th>
                            <th>الإيميل</th>
                            <th>الباسورد</th>
                            <th>الكورسات</th>
                            <th>التحكم</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach(s => { %>
                        <tr>
                            <td><%= s.username %></td>
                            <td class="text-info"><%= s.email %></td>
                            <td><code><%= s.password %></code></td>
                            <td><span class="active-badge"><%= s.activeCount %></span></td>
                            <td>
                                <a href="/admin/reset-student/<%= s._id %>" class="btn btn-sm btn-warning">تصفير</a>
                                <a href="/admin/delete-student/<%= s._id %>" class="btn btn-sm btn-danger ms-1">حذف</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-custom" id="codes-section">
            <div class="d-flex justify-content-between mb-4">
                <h3 class="text-warning">الأكواد (<%= codes.length %>)</h3>
                <div>
                    <a href="/admin/generate-keys" class="btn btn-success btn-sm">توليد أكواد</a>
                    <a href="/admin/delete-all-codes" class="btn btn-danger btn-sm" onclick="return confirm('مسح الكل؟')">مسح الكل</a>
                </div>
            </div>
            <div class="row" style="max-height: 300px; overflow-y: auto;">
                <% codes.forEach(c => { %>
                <div class="col-md-4 mb-2">
                    <div class="p-2 border rounded d-flex justify-content-between align-items-center bg-dark">
                        <span><%= c.code %></span>
                        <i class="fas fa-copy text-primary" style="cursor:pointer" onclick="copy(this, '<%= c.code %>')"></i>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script>
        function copy(icon, text) {
            navigator.clipboard.writeText(text).then(() => {
                icon.className = "fas fa-check text-success";
                setTimeout(() => icon.className = "fas fa-copy text-primary", 1500);
            });
        }
    </script>
</body>
</html>
